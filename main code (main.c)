// ====== 新增：高级文本分析结构 ======
#define MAX_WORDS 10000
#define MAX_WORD_LENGTH 50
#define MAX_STOPWORDS 500
#define MAX_TEXT_LENGTH 50000

struct WordInfo {
    char word[MAX_WORD_LENGTH];
    int count;
};

